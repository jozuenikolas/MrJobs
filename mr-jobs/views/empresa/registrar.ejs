<%- include('../compartido/header/header-component')%>
<%- include('../compartido/navbar/navbar-component')%>


<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="jumbotron bg-transparent m-0">
                <h4 class="display-4 text-center p-0 m-0">¡Registra tu empresa y empieza a brindar oportunidades al mundo!</h4>
            </div>



        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 ">
            <div class="card border-top-0 b border-left-0 border-right-0 radius-card-head">
                <div class="card-header rounded-top card-title-color text-center radius-card-body">
                    <h4><strong>Registrar empresa</strong></h4>
                </div>
                <div class="card-body px-5 py-4">

                    <form>
                        <div class="form-group">
                            <label for="nombreEmpresaID">Nombre <span class="campo-obligatorio">*</span></label>
                            <input type="text" class="form-control"
                                   id="nombreEmpresaID" name="nombreEmpresa" required>
                        </div>
                        <div class="form-group">
                            <label for="sectorEmpresaID">Sector <span class="campo-obligatorio">*</span></label>
                            <input type="text" class="form-control"
                                   id="sectorEmpresaID" name="sectorEmpresa" required>
                        </div>
                        <div class="form-group">
                            <label for="numEmpleadosID">Número de empleados <span class="campo-obligatorio">*</span></label>
                            <input type="number" class="form-control"
                                   id="numEmpleadosID" name="numEmpleados" required>
                        </div>
<!--                        SI ES QUE EXISTE ERROR MOSTRAR ESO-->
                        <div class="alert alert-danger text-center" role="alert">
                            Aquí va el mensaje de error de validación
                        </div>

                        <div class="text-center">
                            <div class="row pt-2">
                                <div class="col-3"></div>
                                <div class="col-6">
                                    <button type="submit"
                                            class="btn btn-primary btn-home-buscar-empleo btn-block ">Enviar</button>
                                </div>
                                <div class="col-3"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('../compartido/footer/footer-component')%>